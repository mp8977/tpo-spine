<div id="appointmentDetailsShow">
  <h1>Pregled</h1>
  <br/>
  <div id="appointment-header">
    <% if @pastDate!=nil %>
      <p><span class="appointment-subtitles">Datum:</span> <%= @pastDate%></p>
    <%end%>

    <% if @pastDoctorType!=nil %>
      <p><span class="appointment-subtitles"><%= @pastDoctorType.slice(0,1).capitalize+@pastDoctorType.slice(1..-1)+': '%></span><%=@pastDoctor%></p>
    <%end%>

    <% if @nextDate!=nil%>
      <p><span class="appointment-subtitles">Naslednji pregled:</span> <%= @nextDate%></p>
    <%end%>
  </div>
  <br/>

  <div id="appointment-instruciton">
    <%if @instructions!= nil and @instructions.length>0%>
     <p class="appointment-subtitles">Navodila:</p>
     <%=@instructions%><br />
     <br />
    <%end%>
  </div>

  <div id="appointment-diets">
    <%if @dietNames!=nil and @dietNames.count>0%>
      <p class="appointment-subtitles">Diete:</p>
      <ul style="list-style-type:none">
      <%i=0%>
      <% @dietNames.each do |dietName|%>

         <li><%=dietName%></li>
         <ul style="list-style-type:square">
           <%k=1%>
           <% (@dietUrls[i]).each do |dietUrl|%>
               <li>
                 <a href="<%=dietUrl %>" target="_blank" >Navodila <%=k%></a>
               </li>
           <%k+=1%>
           <% end %>
         </ul>
         <%i+=1%>
      <%end%>
      </ul>
      <br />
    <%end%>
  </div>

  <div id="appointment-illness">
    <%if @illnessNames!=nil and @illnessNames.count>0%>
      <p class="appointment-subtitles">Bolezni:</p>
      <ul style="list-style-type:none">
      <% @illnessNames.each do |illnessName|%>
        <li><%=illnessName%></li>
      <%end%>
      </ul>
      <br />
    <%end%>

  </div>
  <div id="appointment-allergy">
    <%if @allergyNames!=nil and @allergyNames.count>0%>
        <p class="appointment-subtitles">Alergije:</p>
        <ul style="list-style-type:none">
          <% @allergyNames.each do |allergyName|%>
              <li><%=allergyName%></li>
          <%end%>
        </ul>
        <br />
    <%end%>
  </div>


  <div id="appointment-medicine">
    <%if @medicineNames!=nil and @medicineNames.count>0 %>
        <p class="appointment-subtitles">Zdravila:</p>
        <ul style="list-style-type:none">
          <% i=0%>
          <% @medicineNames.each do |medicineName|%>
              <li><a target="_blank" href="<%=@medicineUrl[i] %>" ><%=medicineName%></a></li>
              <%i+=1%>
          <%end%>
        </ul>
        <br />
    <%end%>
  </div>

 <div id="appointment-measurement">
  <% if @partMeasurementAll!=nil and @partMeasurementAll.count>0%>
    <p class="appointment-subtitles">Meritve:</p>
    <ul style="list-style-type:none">
    <%@partMeasurementAll.each do |partMeasurement|%>
        <%case partMeasurement[0]%>
           <%when "Telesna teza"%>
              <li>Telesna te탑a: <%=partMeasurement[1]%> <%=partMeasurement[2]%><li>
           <%when "Glukoza"%>
              <li>Glukoza: <%=partMeasurement[1]%> <%=partMeasurement[2]%><li>
           <%when "Diastolicni tlak"%>
              <li>Diastoli훾ni tlak: <%=partMeasurement[1]%> <%=partMeasurement[2]%><li>
           <%when "Sistolicni tlak"%>
              <li>Siastoli훾ni tlak: <%=partMeasurement[1]%> <%=partMeasurement[2]%><li>
           <%when "Srcni utrip"%>
              <li>Sr훾ni utrip: <%=partMeasurement[1].to_i%> <%=partMeasurement[2]%><li>
           <%when "Telesna temperatura"%>
              <li>Telesna temperatura: <%=partMeasurement[1]%> <%=partMeasurement[2]%><li>
           <%when "Skupni holesterol"%>
              <li>Skupni holesterol: <%=partMeasurement[1]%> <%=partMeasurement[2]%><li>
           <%when "Holesterol LDL"%>
              <li>Holesterol LDL: <%=partMeasurement[1]%> <%=partMeasurement[2]%><li>
           <%when "Holesterol HDL"%>
              <li>Holesterol HDL: <%=partMeasurement[1]%> <%=partMeasurement[2]%><li>
        <%end%>
    <%end%>
    </ul>
  <%end%>
 </div>
</div>