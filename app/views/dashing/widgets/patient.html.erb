<div class="container">
  <div data-bind="title" class="title"></div>
  <br>
  <%
    userId=1#current_user.id
    patientIndex=0
    patientsAll=Patient.where("user_id=?",userId)
    patientIds=[]
    patientNames=""
    k=0;
    patientsAll.each do |patientId|
      patientIds.push(patientId.id)
      patientNames+=("<li>"+patientId.firstName+' '+patientId.lastName+"</li>")
      k+=1
    end
    patId=patientIds[patientIndex]
     patient=Patient.find(patId)
     address=Address.find(patient.address_id)
     post=Post.find(address.post_id)
  %>

  <div class="info">
    <%= patient.firstName+" "+patient.lastName %><br>
    <%= address.streetName+" "+address.streetNumber %><br>
    <%= post.postNumber+" "+post.postName %><br>
    <%= patient.phone %><br>
    <%= patient.birthDate %><br>
    <%= patient.cardNumber %><br>
  </div>

</div>

