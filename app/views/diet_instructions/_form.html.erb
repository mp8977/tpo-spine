<%= form_for(@diet_instruction) do |f| %>
  <% if @diet_instruction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@diet_instruction.errors.count, "error") %> prohibited this diet_instruction from being saved:</h2>

      <ul>
      <% @diet_instruction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table align="center">
    <tr>
      <td align="right">Spletni naslov:</td>
      <td align="left"><%= f.text_field :url_string %></td>
    </tr>
    <tr>
      <td align="right">Dieta</td>
      <td align="left"><%= f.collection_select(:diet_id, Diet.all, :id, :name ,{include_blank: true},{:multiple => false}) %></td>
    </tr>
    <% if admin_signed_in? %>
        <tr>
          <td align="right">Izbrisana</td>
          <td align="left"><%= f.collection_select(:deleted, %w(true false), :to_s, :to_s, {include_blank: false},{:multiple => false}) %></td>
        </tr>
    <% end %>
  </table>
  <div class="actions">
    <%= f.submit class: "btn btn-info", value: "Poslji" %>
  </div>
<% end %>
