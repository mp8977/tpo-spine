<p id="notice"><%= notice %></p>

<h1>Listing Diet Instructions</h1>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diet_instructions.each do |diet_instruction| %>
      <tr>
        <td><%= diet_instruction.url_string %></td>
        <td><%= link_to 'Show', diet_instruction %></td>
        <td><%= link_to 'Edit', edit_diet_instruction_path(diet_instruction) %></td>
        <td><%= link_to 'Destroy', diet_instruction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

