<%= form_for(@diet) do |f| %>
  <% if @diet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@diet.errors.count, "error") %> prohibited this diet from being saved:</h2>

      <ul>
      <% @diet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table align="center">
    <tr>
      <td align="right">Sifra</td>
      <td align="left"><%= f.text_field :dietNumber %></td>
    </tr>
    <tr>
      <td align="right">Ime</td>
      <td align="left"><%= f.text_field :name %></td>
    </tr>
    <% if admin_signed_in? %>
        <tr>
          <td align="right">Izbrisana</td>
          <td align="left"><%= f.collection_select(:deleted, %w(true false), :to_s, :to_s, {include_blank: false},{:multiple => false}) %></td>
        </tr>
    <% end %>
  </table>

  <div class="actions">
    <%= f.submit class: "btn btn-info", value: "Poslji" %>
  </div>
<% end %>
