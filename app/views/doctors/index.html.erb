<p id="notice"><%= notice %></p>

<h1>Listing Doctors</h1>

<table>
  <thead>
    <tr>
      <th>Doctornumber</th>
      <th>Category</th>
      <th>Email</th>
      <th>Password</th>
      <th>Lastname</th>
      <th>Firstname</th>
      <th>Phone</th>
      <th>Limitpatient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.doctorNumber %></td>
        <td><%= doctor.category %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.password %></td>
        <td><%= doctor.lastName %></td>
        <td><%= doctor.firstName %></td>
        <td><%= doctor.phone %></td>
        <td><%= doctor.limitPatient %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

