<% if admin_signed_in? %>
  <%= form_for(@hospital) do |f| %>
    <% if @hospital.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@hospital.errors.count, "error") %> prohibited this hospital from being saved:</h2>

        <ul>
        <% @hospital.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <table align="center">
      <tr>
        <td align="right">Sifra</td>
        <td align="left"><%= f.text_field :hospitalNumber %></td>
      </tr>
      <tr>
        <td align="right">Ime</td>
        <td align="left"><%= f.text_field :hospitalName %></td>
      </tr>
      <tr>
        <td align="right">Izbrisan</td>
        <td align="left"><%= f.collection_select(:deleted, %w(true false), :to_s, :to_s, {include_blank: false},{:multiple => false}) %></td>
      </tr>
    </table>

    <div class="actions">
      <%= f.submit class: "btn btn-info", value: "Poslji" %>
    </div>
  <% end %>
<% end %>
