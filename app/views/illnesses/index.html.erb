<p id="notice"><%= notice %></p>

<h1>Listing Illnesses</h1>

<table>
  <thead>
    <tr>
      <th>Illnessnumber</th>
      <th>Name</th>
      <th>Isallergy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @illnesses.each do |illness| %>
      <tr>
        <td><%= illness.illnessNumber %></td>
        <td><%= illness.name %></td>
        <td><%= illness.isAllergy %></td>
        <td><%= link_to 'Show', illness %></td>
        <td><%= link_to 'Edit', edit_illness_path(illness) %></td>
        <td><%= link_to 'Destroy', illness, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

