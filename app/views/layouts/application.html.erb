<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8"/>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>TPOSpine</title>
  <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

  <%= csrf_meta_tags %>

</head>
<body>
<div class="container">
  <div class="row profile">
    <!-- ADMIN SideBar -->
    <% if admin_signed_in? %>
        <div class="col-md-3">
          <div class="profile-sidebar">
            <%= image_tag('/assets/user-icon.png' , class: "profile-userpic")%>
            <!-- SIDEBAR USER TITLE -->
            <div class="profile-usertitle">
              <div class="profile-usertitle-name">
                <%= current_admin.email %>
                <br>
                <%= current_admin.last_sign_in_at %>
              </div>
            </div>
            <!-- END SIDEBAR USER TITLE -->
            <!-- SIDEBAR BUTTONS -->
            <div class="profile-userbuttons">
              <%=link_to 'Izpis', destroy_admin_session_path, :method => :delete%>
            </div>
            <!-- END SIDEBAR BUTTONS -->
            <!-- SIDEBAR MENU -->
            <div class="profile-usermenu">
              <ul class="nav">
                <li class="active">
                  <a href="/doctors/sign_up">
                    <i class="glyphicon glyphicon-user"></i>
                    Registriraj zdravnika</a>
                </li>
                <li>
                  <a href="/nurses/sign_up">
                    <i class="glyphicon glyphicon-user"></i>
                    Registriraj med. sestro </a>
                </li>
              </ul>
            </div>
            <!-- END MENU -->
          </div>
        </div>
    <% end %>
    <!--END ADMIN SideBar -->

    <!-- NURSE SideBar -->
    <% if nurse_signed_in? %>
        <div class="col-md-3">
          <div class="profile-sidebar">
            <%= image_tag('/assets/user-icon.png' , class: "profile-userpic")%>
            <!-- SIDEBAR USER TITLE -->
            <div class="profile-usertitle">
              <div class="profile-usertitle-name">
                <%= current_nurse.email %>
                <br>
                <%= current_nurse.last_sign_in_at %>
              </div>
            </div>
            <!-- END SIDEBAR USER TITLE -->
            <!-- SIDEBAR BUTTONS -->
            <div class="profile-userbuttons">
              <%=link_to 'Izpis', destroy_nurse_session_path, :method => :delete%>
            </div>
            <!-- END SIDEBAR BUTTONS -->
            <!-- SIDEBAR MENU -->
            <div class="profile-usermenu">
              <ul class="nav">
                <li class="active">
                  <a href="/nurses/<%= current_nurse.id%>/edit">
                    <i class="glyphicon glyphicon-user"></i>
                    Nastavitve profila</a>
                </li>

              </ul>
            </div>
            <!-- END MENU -->
          </div>
        </div>
    <% end %>
    <!--END NURSE SideBar -->

    <!-- DOCTOR SideBar -->
    <% if doctor_signed_in? %>
        <div class="col-md-3">
          <div class="profile-sidebar">
            <%= image_tag('/assets/user-icon.png' , class: "profile-userpic")%>
            <!-- SIDEBAR USER TITLE -->
            <div class="profile-usertitle">
              <div class="profile-usertitle-name">
                <%= current_doctor.email %>
                <br>
                <%= current_doctor.last_sign_in_at %>
              </div>
            </div>
            <!-- END SIDEBAR USER TITLE -->
            <!-- SIDEBAR BUTTONS -->
            <div class="profile-userbuttons">
              <%=link_to 'Izpis', destroy_doctor_session_path, :method => :delete%>
            </div>
            <!-- END SIDEBAR BUTTONS -->
            <!-- SIDEBAR MENU -->
            <div class="profile-usermenu">
              <ul class="nav">
                <li class="active">
                  <a href="/doctors/<%= current_doctor.id%>/edit">
                    <i class="glyphicon glyphicon-user"></i>
                    Nastavitve profila</a>
                </li>

              </ul>
            </div>
            <!-- END MENU -->
          </div>
        </div>
    <% end %>
    <!--END DOCTOR SideBar -->

    <!-- USER SideBar -->
    <% if user_signed_in? %>
        <div class="col-md-3">
          <div class="profile-sidebar">
            <%= image_tag('/assets/user-icon.png' , class: "profile-userpic")%>
            <!-- SIDEBAR USER TITLE -->
            <div class="profile-usertitle">
              <div class="profile-usertitle-name">
                <%= current_user.email %>
                <br>
                <%= current_user.last_sign_in_at %>
              </div>
            </div>
            <!-- END SIDEBAR USER TITLE -->
            <!-- SIDEBAR BUTTONS -->
            <div class="profile-userbuttons">
              <%=link_to 'izpis', destroy_user_session_path, :method => :delete%>
            </div>
            <!-- END SIDEBAR BUTTONS -->
            <!-- SIDEBAR MENU -->
            <div class="profile-usermenu">
              <ul class="nav">
                <li class="active">
                  <a href="/patients/<%=current_user.patients.first.id %>/edit">
                    <i class="glyphicon glyphicon-user"></i>
                    Nastavitve profila</a>
                </li>
                <li class="active">
                  <a href="/dashing">
                    <i class="glyphicon glyphicon-user"></i>
                    Dashboard</a>
                </li>

              </ul>
            </div>
            <!-- END MENU -->
          </div>
        </div>
    <% end %>
    <!--END USER SideBar -->

    <% if admin_signed_in? || user_signed_in? || doctor_signed_in? || nurse_signed_in?%>
        <div class="col-md-9">
          <div class="profile-content">
            <%= yield %>

          </div>
        </div>
    <% end %>

    <% if !(admin_signed_in? || user_signed_in? || doctor_signed_in? || nurse_signed_in?)%>
        <%= yield %>
    <% end %>

  </div>
</div>

</body>
</html>
<!-- vprasaj pluta od kje pride canvas-->
<script>$(".header-bg").hide();</script>