<!DOCTYPE html>
<html>
<head>
  <title>TPOSpine</title>
  <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<!-- ADMIN SideBar -->
  <% if admin_signed_in? %>
    <div class="container">
      <div class="row profile">
        <div class="col-md-3">
          <div class="profile-sidebar">
            <%= image_tag '/assets/user-icon.png' %>
            <!-- SIDEBAR USER TITLE -->
            <div class="profile-usertitle">
              <div class="profile-usertitle-name">
                <%= current_admin.email %>
                <br>
                <%= current_admin.last_sign_in_at %>
              </div>
            </div>
            <!-- END SIDEBAR USER TITLE -->
            <!-- SIDEBAR BUTTONS -->
            <div class="profile-userbuttons">
              <%=link_to 'Sign_out', destroy_admin_session_path, :method => :delete%>
            </div>
            <!-- END SIDEBAR BUTTONS -->
            <!-- SIDEBAR MENU -->
            <div class="profile-usermenu">
              <ul class="nav">
                <li class="active">
                  <a href="/doctors/sign_up">
                    <i class="glyphicon glyphicon-user"></i>
                    Registriraj zdravnika</a>
                </li>
                <li>
                  <a href="/nurses/sign_up">
                    <i class="glyphicon glyphicon-user"></i>
                    Registriraj med. sestro </a>
                </li>
              </ul>
            </div>
            <!-- END MENU -->
          </div>
        </div>
      </div>
    </div>
  <% end %>
<!--END ADMIN SideBar -->

<%= yield %>

</body>
</html>
