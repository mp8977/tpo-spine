<p id="notice"><%= notice %></p>

<h1>Listing Medicine Checks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medicine_checks.each do |medicine_check| %>
      <tr>
        <td><%= medicine_check.name %></td>
        <td><%= link_to 'Show', medicine_check %></td>
        <td><%= link_to 'Edit', edit_medicine_check_path(medicine_check) %></td>
        <td><%= link_to 'Destroy', medicine_check, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

