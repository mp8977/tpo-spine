<div class="text-center">
  <h2>Registracija medicinske sestre</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <table align="center">
      <tr>
        <td align="right">Email:</td>
        <td><%= f.email_field :email, autofocus: true %></td>
      </tr>
      <tr>
        <td align="right">
          Geslo
          <% if @minimum_password_length %>
              <em>(vsaj <%= @minimum_password_length %> znakov):</em>
          <% end %>
        </td>
        <td><%= f.password_field :password, autocomplete: "off" %></td>
      </tr>
      <tr>
        <td align="right">Ponovitev gesla:</td>
        <td><%= f.password_field :password_confirmation, autocomplete: "off" %></td>
      </tr>
    </table>

    <div class="actions">
      <%= f.submit class: "btn btn-success", value: "Registracija" %>
    </div>
  <% end %>

  <%= render "nurses/shared/links" %>
</div>