<p id="notice"><%= notice %></p>

<h1>Listing Part Measurements</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Unit</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @part_measurements.each do |part_measurement| %>
      <tr>
        <td><%= part_measurement.name %></td>
        <td><%= part_measurement.unit %></td>
        <td><%= part_measurement.value %></td>
        <td><%= link_to 'Show', part_measurement %></td>
        <td><%= link_to 'Edit', edit_part_measurement_path(part_measurement) %></td>
        <td><%= link_to 'Destroy', part_measurement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

